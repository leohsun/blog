.footer
  height 220px
  text-align center
  color #5a5a5a
  padding 30px 0
  a
    color #5a5a5a
    position relative
    &::after
      position absolute
      content ''
      left 0
      top 100%
      height 1px
      width 100%
      background #232323
      transition transform 0.2s ease-in
      transform scaleX(0)
    &:hover
      color #232323
      &::after
        transform scaleX(1)