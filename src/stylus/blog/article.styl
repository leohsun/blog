.article-switch
  position absolute
  height 100px
  display flex
  width 100%
  top -150px
  .switch
    position absolute
    top 0
    width 400px
    display flex
    .btn
      position relative
      z-index 1
      width 100px
      line-height 100px
      font-size 50px
      text-align center
      background #fff
      cursor help
    .widget
      background rgba(255, 255, 255, 0.8)
      transition transform 0.2s ease-out
      display flex
      flex 1
      .cover
        width 100px
        height 100px
        background-size cover
        background-position center center
      .title
        flex 1
        line-height 100px
        text-align center
  .previous
    left 0
    height 100px
    .widget
      transform translateX(-300px)
    &.show
      .widget
        transform translateX(0px)
  .next
    right 0
    height 100px
    .widget
      transform translateX(300px)
    &.show
      .widget
        transform translateX(0px)
.content-wrapper
  width 800px
  margin 0 auto
  .main-title
    color #918f90
    font-size 25px
    font-weight 700
    padding-bottom 25px
  .article-footer
    color #A1A1A1
    .cats
      color inherit
      margin-right 8px
    